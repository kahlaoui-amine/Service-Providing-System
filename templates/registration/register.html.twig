{% extends 'base.html.twig' %}
{% block  head %}
<title>{% block title %}Register{% endblock %}</title>
   
      <style type="text/css">
             .w-full{
              
            float:top; margin:0 10px 0 20px;
              }
            

            </style>
  {% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h2>Pour prendre des rendez-vous , Inscrivez vous maintenant ! </h2>
  <p></p></br>
            
 <div class="form-group col-lg-6">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.uuid,{'attr':{'placeholder': "votre pseudo"}}) }}
        {{ form_row(registrationForm.email,{'attr':{'placeholder': "votre Email"}}) }}
        {{ form_row(registrationForm.plainPassword,
         { label: 'Password' ,'attr':{'placeholder': "votre mot de passe"}}) }}
        {{ form_row(registrationForm.agreeTerms) }}
    <p> Vous avez déjà un compte? <a href="{{path('app_login')}}">   connectez-vous</a></p>

    <div class="d-grid gap-2 col-10 mx-auto" data-aos="fade-up" data-aos-delay="0">
        <button type="submit"  class="btn btn-primary btn-block" color="$orange-500" formnovalidate>INSCRIPTION</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
    <SPAN style="position: absolute; top: 55px; left: 55%;">
      <img align="right" src="uploads/e0ce35c7af4fc7e17fcb3e2b33abc54e.jpg" alt="" class="w-full" width="550" height="680" data-aos="fade-up" data-aos-delay="0">
  </SPAN>
   

{% endblock %}
