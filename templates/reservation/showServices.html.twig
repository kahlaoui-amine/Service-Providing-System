{% extends 'base.html.twig' %}


{% block body %}
 {{ include('Layouts/partials/_nav.html.twig') }}

 <h1 align="center"><B>Annonces</B> </h1></br>

  <div  class="d-grid gap-10 col-5 mx-auto" >
  {{ form(search_form)}}
</div>

 {% if services|length>0 %}
	
   <div  class="d-grid gap-10 col-5 mx-auto" >

	{% for service in services %}
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row no-gutters">
				<div class="col-md-4">
				</br>
			
				<img src="https://www.emmegi.co.uk/wp-content/uploads/2019/01/User-Icon.jpg" class="card-img" alt="...">
				</div>
			<div class="col-md-8">
		<div class="card-body">

	<h5 class="card-title"><B>{{ service.titre }}</B></h5>
	<B> {{ service.fournisseur.prenom }}  {{ service.fournisseur.nom }} </B></br></br>
 <B>Note </B>: {{ service.fournisseur.noteMoyenne  }}  <i class="bi bi-star-fill"></i> 
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
</svg></br>

	
			
<B>Tel</B> :{{ service.telephone }}</br>
<B>Adresse</B> : {{ service.adresse }}</br>
<B>Creneau de base</B> : {{ service.creneauBase }}</br>
			<B>Tarif</B> :  {{ service.tarif }} €</br>

			<button type="button" class="btn btn-warning"><a href="{{path('app_show_calendar',{ 'idS' : service.id, 'idClient' : app.user }  )}}" class="card-link"> 
			<span class="glyphicon glyphicon-calendar"></span><B>Prendre RDV</B></a></br></button>

						</div>
					</div>

			</div>

		</div>

	
	{% endfor %}
{% else %}
	<h3 align="center">Aucun résultat pour votre recherche</h1>
{% endif %}
</div>


{% endblock %}



